@{
    ViewData["Title"] = "Home Page";
}
@using asp_dot_net_core_web_app_mvc_fast_food_system.Models.Base;
@model IEnumerable<Product>;

<div class="home-page">
    <h2>Products Available</h2>
    <div class="products">
        @foreach(Product product in Model)
        {
            <div class="product">
                <p>@product.Code</p>
                <p>@product.Name</p>
                <p>@product.Price</p>
            </div>
        }
    </div>
</div>
